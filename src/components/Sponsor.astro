<style>
  h2 {
    text-align: center;
    margin-bottom: var(--small);
    color: var(--red);
  }

  .sponsor_logo {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    align-items: center;
    justify-items: center;
    row-gap: 0.5em;
    margin-bottom: var(--medium);
  }

  img {
    max-width: 50%;
  }

  .kommune {
    max-width: 25%;
  }

  .dnp {
    max-width: 40%;
  }

  .andersen {
    max-width: 45%;
  }

  @media (min-width: 1200px) {
    .sponsor_logo {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      row-gap: 1.5em;
    }
  }
