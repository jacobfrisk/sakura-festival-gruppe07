---
import Button from "../components/Button.astro";
---

<section class="daySwicther">
  <button class="active" data-filter="Saturday">Saturday</button>
  <button data-filter="Sunday">Sunday</button>
</section>

<script>
  let filter = "Saturday";
  doFiltering();
  document.querySelectorAll("button").forEach((btn) => {
    btn.addEventListener("click", btnClick);
  });

  function btnClick(evt) {
    filter = evt.target.dataset.filter;
    console.log(filter);
    doFiltering();
    document.querySelectorAll("button").forEach((btn) => {
      if (btn.dataset.filter === filter) {
        btn.classList.add("active");
      } else {
        btn.classList.remove("active");
      }
    });
  }

  function doFiltering() {
    document.querySelectorAll("article").forEach((element) => {
      console.log(element.classList.contains(filter));
      if (element.classList.contains(filter) === true) {
        element.classList.remove("hide");
      } else {
        element.classList.add("hide");
      }
    });
  }
</script>

<style>
  button {
    border-radius: 500px;
    box-shadow: 0 0 0 2px var(--red);
    transition: 50ms all ease-in;
    color: var(--red);
    margin-inline: auto;
    text-align: center;
    border: none;
    padding: var(--extra-small) var(--medium);
    font-size: var(--h4-font-size);
    cursor: pointer;
    background: none;
  }

  button.active.astro-IVP77FW4 {
    background-color: var(--red);
    color: var(--white);
    -webkit-text-stroke: 0;
    border: none;
  }

  button:hover {
    background-color: var(--red);
    color: var(--pink);
  }
  .daySwicther {
    display: flex;
    gap: 2rem;
  }
</style>
